    <center>

      <div class="container">
  <% data.forEach(function(details) { %>
    
      <form class="form-group cadastro" action="/edit2/<%= details._id %>" method="POST">
      <input class="form-control" type="text"   placeholder="Nome"                 value="<%= details.nome %>"           name="nome"style='width: 400px'><br>
      <input class="form-control" type="text"   placeholder="Sobrenome"            value="<%= details.sobrenome %>"      name="sobrenome"style='width: 400px'><br>
      <input class="form-control" type="text"   placeholder="CPF"                  value="<%= details.cpf %>"            name="cpf"style='width: 400px'><br>
      <input class="form-control" type="date"   placeholder="Data de Nascimento"   value="<%= details.datanascimento %>" name="datanascimento"style='width: 400px'><br>
      <input class="form-control" type="email"  placeholder="Email"                value="<%= details.email %>"          name="email"style='width: 400px'><br>
      <input class="form-control" type="text"   placeholder="Pais"                 value="<%= details.pais %>"           name="pais"style='width: 400px'><br>
      <input class="form-control" type="number" placeholder="Estado"               value="<%= details.estado %>"         name="estado"style='width: 400px'><br>
      <input class="form-control" type="number" placeholder="Cidade"               value="<%= details.cidade %>"         name="cidade"style='width: 400px'><br>
      <input class="form-control" type="number" placeholder="Rua"                  value="<%= details.rua %>"            name="rua"style='width: 400px'><br>
      <input class="form-control" type="number" placeholder="Numero da casa"       value="<%= details.numerocasa %>"           name="casa"style='width: 400px'><br>
      <input class="form-control" type="number" placeholder="Numero para contato"  value="<%= details.numerocontato %>"  name="numerocontato"style='width: 400px'><br>
      
      <a href="/show2"class="btn btn-danger"style='width: 200px'>Cancelar</a>

      <button class="btn btn-success" type="submit"style='width: 200px'>Confirmar</button>
    
      
